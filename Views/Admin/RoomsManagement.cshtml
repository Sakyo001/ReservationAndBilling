                                <p class="price">₱1,200/night</p>
                                <div class="d-flex btn-container">
                                    <button class="btn update-btn flex-grow-1">Update</button>
                                    <button class="btn delete-btn flex-grow-1">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Room Card 3 -->
                    <div class="col-md-4">
                        <div class="card room-card">
                            <img src="~/Content/Images/room1.png" class="card-img-top" alt="Standard Room 203">
                            <div class="card-body">
                                <h5 class="card-title">Standard Room 203</h5>
                                <p class="small mb-2">
                                    <span>• 2 guests</span>
                                    <span>• 1 bed</span>
                                    <span>• Balcony</span>
                                </p>
                                <p class="price">₱1,200/night</p>
                                <div class="d-flex btn-container">
                                    <button class="btn update-btn flex-grow-1">Update</button>
                                    <button class="btn delete-btn flex-grow-1">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card room-card">
                            <img src="~/Content/Images/room1.png" class="card-img-top" alt="Standard Room 202">
                            <div class="card-body">
                                <h5 class="card-title">Standard Room 202</h5>
                                <p class="small mb-2">
                                    <span>• 2 guests</span>
                                    <span>• 1 bed</span>
                                    <span>• Balcony</span>
                                </p>
                                <p class="price">₱1,200/night</p>
                                <div class="d-flex btn-container">
                                    <button class="btn update-btn flex-grow-1">Update</button>
                                    <button class="btn delete-btn flex-grow-1">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Room Card 3 -->
                    <div class="col-md-4">
                        <div class="card room-card">
                            <img src="~/Content/Images/room1.png" class="card-img-top" alt="Standard Room 203">
                            <div class="card-body">
                                <h5 class="card-title">Standard Room 203</h5>
                                <p class="small mb-2">
                                    <span>• 2 guests</span>
                                    <span>• 1 bed</span>
                                    <span>• Balcony</span>
                                </p>
                                <p class="price">₱1,200/night</p>
                                <div class="d-flex btn-container">
                                    <button class="btn update-btn flex-grow-1">Update</button>
                                    <button class="btn delete-btn flex-grow-1">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>




                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
