@{
    ViewBag.Title = "Hotel Reservation Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Reservation Login</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('@Url.Content("~/Content/images/hallway.jpg")') no-repeat center center fixed;
            background-size: cover;
        }
        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .login-box {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }
        .login-box h2 {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
        }
        .form-control,
        .btn-login {
            display: block;
            width: 100%;
            max-width: 100%;
            font-size: 18px;
            box-sizing: border-box;
        }
        .btn-login {
            background-color: #8B5D33;
            color: #fff;
            font-weight: bold;
            border: none;
            margin-top: 10px;
        }
        .btn-login:hover {
            background-color: #704b29;
        }
        .form-text {
            text-align: center;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h2>WELCOME TO HOTEL RESERVATION</h2>
            <form method="post" action="@Url.Action("Login", "Auth")">
                <div class="form-group">
                    <label for="email">E-mail Address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your e-mail" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn btn-login">LOGIN</button>
                <p class="form-text mt-3">Don't have an account? <a href="SignUp">Create Account</a></p>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
